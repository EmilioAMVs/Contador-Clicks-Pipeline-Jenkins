{
  "testEnvironment": "node",
  "collectCoverage": true,
  "coverageDirectory": "coverage",
  "verbose": true,
  "reporters": [
    "default",
    ["jest-html-reporters", {
      "publicPath": "./reports",
      "filename": "jest-report.html",
      "expand": true,
      "hideIcon": true,
      "pageTitle": "Reporte de Tests Jest"
    }]
  ],
  "transform": {
    "^.+\\.js$": "babel-jest"
  },
  "testMatch": [
    "**/__tests__/**/*.[jt]s?(x)",
    "**/?(*.)+(spec|test).[tj]s?(x)",
    "**/__tests__/**/*.cjs",
    "**/?(*.)+(spec|test).cjs"
  ]
}